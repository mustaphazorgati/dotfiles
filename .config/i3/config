for_window [class="Yad"] floating enable

for_window [instance="dropdown"] floating enable
for_window [instance="dropdown"] resize set 1500 600
for_window [instance="dropdown"] move scratchpad
for_window [instance="dropdown"] border pixel 2
exec --no-startup-id urxvt -name dropdown
bindsym $mod+t [instance="dropdown"] scratchpad show; [instance="dropdown"] move position center

for_window [instance="math"] floating enable
for_window [instance="math"] resize set 800 300
for_window [instance="math"] move scratchpad
for_window [instance="math"] border pixel 2
exec --no-startup-id urxvt -name math -e python
bindsym $mod+a [instance="math"] scratchpad show; [instance="math"] move position center

for_window [instance="ssh-add"] floating enable
for_window [instance="ssh-add"] resize set 800 300
for_window [instance="ssh-add"] border pixel 2
for_window [instance="ssh-add"] sticky enable
for_window [instance="ssh-add"] focus

for_window [class="zoom"] floating enable
no_focus [class="zoom" title="^zoom"]
